	<div class="Content">
		 {{#each datos.cursos}}
		     <div class="Curso col-sm-12">
    		     <div class="Titulos item_curso col-sm-12">
    		         
    		         <div class="col-sm-8">{{this.nombre_curso}}</div>
    		         <div class="col-sm-2">Estado</div>
    		         <div class="col-sm-2">Calificaci√≥n</div>
    		     </div>
    		     {{#each ../datos.talleres}}
        		     {{#ifCond this.id_curso '==' ../this.id_curso}}
        		         {{#ifCond this.activa '==' 1}}
        		             {{#ifCond this.nota '!=' null}}
        		             <div class="Actividad col-sm-12">
        		                 <div class="nombre col-sm-8">Actividad: {{this.id_tarea}}</div>
        		                 <div class="col-sm-2">Subida</div>
        		                 <div class="col-sm-2">{{this.nota}}</div>
        		             </div>
        		             {{/ifCond}}
        		             {{#ifCond this.nota '==' null}}
                		             <div class="Actividad col-sm-12">
                		                 <div class="nombre col-sm-8">Actividad: {{this.id_tarea}}</div>
                		                 <div class="col-sm-2">Subida</div>
                		                 <div class="col-sm-2">--</div>
                		             </div>
                		      {{/ifCond}}
        		          {{/ifCond}}
        		          {{#ifCond this.activa '==' 2}}
        		             <div class="Actividad col-sm-12">
        		                 <div class="nombre col-sm-8">Actividad: {{this.id_tarea}}</div>
        		                 <div class="col-sm-2">Calificada</div>
        		                 <div class="col-sm-2">{{this.nota}}</div>
        		                 {{#ifCond this.nota '==' null}}
                		             <div class="Actividad col-sm-12">
                		                 <div class="nombre col-sm-8">Actividad: {{this.id_tarea}}</div>
                		                 <div class="col-sm-2">Calificada</div>
                		                 <div class="col-sm-2">--</div>
                		             </div>
                		          {{/ifCond}}
        		             </div>
        		          {{/ifCond}}
        		     {{/ifCond}}
    		     {{/each}}
    		 </div>
        {{/each}}
		 
		 
	</div>	
