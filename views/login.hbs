<div class="login_body">
    <nav id="myNavbar" class="navbar navbar-default navbar-fixed-top" role="navigation">
        
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Sistema de Notas Javeriano</a>
            </div>
            
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">About</a></li>
                    <li><a href="/">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container login_container">
    <h2></h2>
    
        <form class="form-horizontal" action="/validation" method="post">
            <div class="logo_login"> </div>
            
            {{#if errors.name.hasErrors}}
            <div class="form-group has-error">
                <label class="control-label col-sm-4" for="nameField" autofocus="">Cuenta:</label>
                <div class="col-sm-8">
                    <input name="name" type="text" class="form-control" id="nameField" placeholder="Cuenta de Usuario" value="{{user.name}}">
                </div>
                <div class="col-sm-12 help-block with-errors">
                    {{errors.name.error}}   
                </div>
            </div>
            {{else}}
                {{#if user_problems.name.hasProblem}}
                <div class="form-group">
                    <label class="control-label col-sm-4" for="nameField" autofocus="">Cuenta:</label>
                    <div class="col-sm-8">
                        <input name="name" type="text" class="form-control" id="nameField" placeholder="Cuenta de Usuario" value="{{user.name}}">
                    </div>
                    <div class="col-sm-12 help-block with-errors">
                        {{user_problems.name.problem}}   
                    </div>
                </div>
                {{else}}
                <div class="form-group">
                    <label class="control-label col-sm-4" for="nameField" autofocus="">Cuenta:</label>
                    <div class="col-sm-8">
                        <input name="name" type="text" class="form-control" id="nameField" placeholder="Cuenta de Usuario" value="{{user.name}}">
                    </div>
                </div>
                {{/if}}
            {{/if}}
            {{#if errors.password.hasErrors}}
            <div class="form-group has-error">
                <label class="control-label col-sm-4" for="passwordField">Contraseña:</label>
                <div class="col-sm-8">          
                    <input name="password" type="password" class="form-control" id="passwordField" placeholder="Contraseña" value="{{user.password}}">
                </div>
                <div class="col-sm-12 help-block with-errors">
                    {{errors.password.error}}   
                </div>
            </div>
            {{else}}
                {{#if user_problems.password.hasProblem}}
                <div class="form-group">
                    <label class="control-label col-sm-4" for="passwordField">Contraseña:</label>
                    <div class="col-sm-8">          
                        <input name="password" type="password" class="form-control" id="passwordField" placeholder="Contraseña" value="{{user.password}}">
                    </div>
                    <div class="col-sm-12 help-block with-errors">
                        {{user_problems.password.problem}}   
                </div>
                </div>
                {{else}}
                <div class="form-group">
                    <label class="control-label col-sm-4" for="passwordField">Contraseña:</label>
                    <div class="col-sm-8">          
                        <input name="password" type="password" class="form-control" id="passwordField" placeholder="Contraseña" value="{{user.password}}">
                    </div>
                </div>
                {{/if}}
            {{/if}}
            <div class="form-group">        
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Iniciar</button>
                </div>
            </div>

        </form>
        
    </div>
</div>