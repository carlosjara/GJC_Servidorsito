<div class="estudiante resumen">
	<div class="header">
		<nav id="navbar_index" class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="col-sm-4 navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span></span><img src="../../../images/logo_app.png" class="img-responsive" alt="Cinque Terre"></span>
                
            </div>
            
            <div class="col-sm-8 collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav navbar-nav">
                    <li><a href="../administrador_cursos/{{idUser}}"><div class="text-primary col-sm-5">Cursos</div></a></li>
                    <li><a href="../administrador_estudiantes/{{idUser}}"><div class="col-sm-5">Usuarios</div></a></li>
                    <li><a href="../administrador_matricular/{{idUser}}"><div class="col-sm-5">Matricular</div></a></li>
                    <li><a href="/login"><div class="text-primary col-sm-8">{{title}}</div> <div class="col-sm-4">Salir</div></a></li>
                </ul>
            </div>
        </div>
        </nav>
	</div>
	<div class="Content">
		     <div class="Curso col-sm-12">
    		        <div class="Actividad col-sm-12">Nuevo Curso </div>
                    <div class="col-sm-6" align="left">Nombre del Curso</div>
                    <div class="col-sm-6">Docente Propietario </div>
                    <form action="/administrador_cursos/crear/{{idUser}}" method="post">
                                <div class="col-sm-6" align="left"><input type="text" name="nombre_curso" step="1" value=""></div>
                                <div class="col-sm-6">
                                          <select class="form-control" name="picked" id="sel1">
                                            {{#each profesores}}
                                            <option value="{{this.id_usuario}}">{{this.nombre_usuario}}</option>
                                            {{/each}}
                                          </select>
                                </div>
                            <div class="col-sm-12">
                                <div class="col-sm-4"></div>
                                <div class="col-sm-4"><button type="submit" value="Submit">Crear Curso</button></div>
                                <div class="col-sm-4"></div>
                            </div>
                    </form>
            </div>
            <div class="col-sm-12"></div>
            <div class="Curso col-sm-12">
                    <div class="Titulos col-sm-12">
                        <div class="col-sm-6" align="left"><Strong>Nombre del Curso</Strong></div>
                        <div class="col-sm-6" align="left">ID Docente</div>
                    </div>
                    <div class="col-sm-12">
                        {{#each cursos}}
                            <div class="Actividad col-sm-6" align="left">{{this.nombre_curso}}</div>
                            <div class="Actividad col-sm-5" align="left">{{this.id_propietario}}</div>
                        {{/each}}
                    </div>
            </div>
		 
	</div>	
	<div class="RightBar">

</div>