<div class="estudiante resumen">
	<div class="header">
		<nav id="navbar_index" class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="col-sm-4 navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <span></span><img src="../../../images/logo_app.png" class="img-responsive" alt="Cinque Terre"></span>
                
            </div>
            
            <div class="col-sm-8 collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav navbar-nav">
                    <li><a href="../../../profesor_resumen/{{idUser}}"><div class="col-sm-6">Resumen</div></a></li>
                    <li><a href="../../../profesor_materias/{{idUser}}"><div class="text-primary col-sm-6">Materias</div></a></li>
                    <li><a href="../../../profesor_nueva/{{idUser}}">Crear Tarea</a></li>
                    <li><a href="/login"><div class="text-primary col-sm-6">{{title}}</div><div class="col-sm-6">Salir</div></a></li>
                </ul>
            </div>
        </div>
        </nav>
	</div>
	<div class="Content">
        {{#each talleres}}
		     <div class="Curso col-sm-12">
    		         <div class="Titulos col-sm-12" ><B>Actividad: {{this.id_tarea}}</B></div>
    		         <div class="Actividad col-sm-6" align="left"><Strong>Estudiante</Strong></div>
    		         <div class="Actividad col-sm-3" align="left"><Strong>Nota</Strong></div>
    		         <div class="Actividad col-sm-2" align="left"><Strong>Archivo</Strong></div>
        		     {{#each ../estudiantes}}
            		          {{#each ../../documentos}}
                		          {{#ifCond this.id_usuario '==' ../id_usuario}}
                		              {{#ifCond this.id_tarea '==' ../../id_tarea}}
                        		          <div class="Estudiantes_lista nombre col-sm-6" align="left">{{../nombre_usuario}}</div>
                        		          <form action="../../registrarNota/{{../../../idUser}}/curso/{{../../id_curso}}/actividad/{{../../id_tarea}}/usuario/{{../id_usuario}}" method="post">
                                    		  <div class="col-sm-1" align="left"><input type="text" name="nota" value="{{this.nota}}" /></div>
                        		              <div class="col-sm-2" ><button type="submit" value="Submit">Cambiar</button></div>
                    		              </form>
                    		              <div class="col-sm-2" align="left"><Strong>{{this.nombre}}</Strong></div>
                    		          {{/ifCond}}
            		              {{/ifCond}}
            		         {{/each}}
        		     {{/each}}
    		 </div>
        {{/each}}
		 
	</div>	
	<div class="RightBar">

</div>